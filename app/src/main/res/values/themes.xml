<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_dark</item>
        <item name="colorPrimaryVariant">@color/yellow_light</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorOnPrimary">@color/brown_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_dark</item>
        <item name="colorSecondaryVariant">@color/brown_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text input theme -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- Radio button themes -->
        <item name="radioButtonStyle">@style/Widget.TipTime.CompoundButton.RadioButton</item>
        <!-- Switch theme -->
        <item name="switchStyle">@style/Widget.TipTime.CompoundButton.Switch</item>
    </style>
    <style name="Button.Yellow" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/yellow_light</item>
        <item name="colorOnPrimary">@color/brown</item>
    </style>
</resources>